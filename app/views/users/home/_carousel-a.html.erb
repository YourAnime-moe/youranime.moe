
  <% host = Config.main_host %>

  <% show_ids = [49, 60, 56, 54, 46, 47, 51, 55, 52] %>

  <div class="carousel carousel-slider">
    <% show_ids.each do |show_id| %>
      <a class="carousel-item" href="/shows?id=<%= show_id %>"><img style="object-fit: cover;" src="/shows/img?id=<%= show_id %>"></a>  
    <% end %>
  </div>

  <script type="text/javascript">
      $(document).ready(function() {
          $('.carousel.carousel-slider').carousel({fullWidth: true});
      });
      $(document).ready(function(){
          $('.carousel').carousel();
      });
  </script>
