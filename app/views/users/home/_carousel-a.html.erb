
  <% host = Config.main_host %>

  <% show_ids = Show.get_random_shows(has_banner: true) %>

  <div class="carousel carousel-slider">
    <% show_ids.each do |show_id| %>
      <% show = Show.find_by id: show_id %>
      <% next if show.nil? %>
      <a class="carousel-item" href="/shows?id=<%= show_id %>">
        <%= image_tag show.banner_url, style: "object-fit: cover;" %>
      </a>  
    <% end %>
  </div>

  <script type="text/javascript">
      $(document).ready(function() {
          $('.carousel.carousel-slider').carousel({fullWidth: true});
      });
      $(document).ready(function(){
          $('.carousel').carousel();
      });
  </script>
