.center
    .container
        h4.title style="padding-bottom: 2%;" #{t('anime.shows.view-all')}

    .container
        - @split_shows.each do |show_group|
            .row
                - show_group.each do |show|
                    .col.m6
                        a href="/shows?id=#{show.id}"
                            = image_tag show.get_banner
                        - @show = show
                        = render 'shows/description'

    - if @has_coming_soon
        hr
        .container
            h4.title style="padding-bottom: 2%" #{t('anime.shows.coming-soon')}

        .container
            - @split_coming_soon.each do |show_group|
                .row
                    - show_group.each do |show|
                        .col.m6
                            = image_tag show.get_banner
                            - @show = show
                            = render 'shows/description'
                    