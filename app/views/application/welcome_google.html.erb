<div class="text-center">
  <div class="vertical-center">
    <div class="wrapper tanoshimu-login">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="text-center">
          <%= image_tag 'tanoshimu', class: 'logo' %> + 
          <img width="130px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"/>
        </div>

        <p class="text-muted"><%= t('welcome.google.register') %></p>
          <%= form_for @user, url: "/welcome/google/user", method: :post, html: {class: "form-signup"} do |f| %>
            <%= f.hidden_field :google_refresh_token %>
            <%= f.hidden_field :google_token %>
            <%= f.hidden_field :username %>
          
            <%= f.label :name, "Your name", class: 'sr-only' %>
            <%= f.text_field :name, class: 'form-control' %>
            <%= f.label :password, "Your new password", class: 'sr-only' %>
            <%= f.password_field :password, placeholder: 'Your new password', class: 'form-control', autofocus: true, autocomplete: 'off' %>
            <%= f.password_field :password_confirmation, placeholder: 'Confirm your password', class: 'form-control', autocomplete: 'off' %>
            
            <div style="margin: 10px -80px;">
              <p><%= t('welcome.google.warning') %></p>
            </div>
            
            <small><%= link_to(t('welcome.google.terms'), 'https://www.akinyele.ca/privacy-policy', target: '_blank') %></small>
            <button style="margin-top: 10px;" class="btn btn-primary btn-block" type="submit"><%= t('welcome.google.register-action') %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
