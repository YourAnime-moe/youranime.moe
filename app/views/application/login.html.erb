<% url = @login_url if !@login_url.nil? %>
<% url = '/login' if url.nil? %>
<% error_cont_id = 'error-message' %>
<% wait_cont_id = 'waiting-message' %>
<% succ_cont_id = 'success-message' %>

<div class="vertical-center">
    <div class="wrapper">
        <div id="login-container" class="center">
            <img src="/img/tanoshimu.png" class="hero-image back"/>
            <h4 title='Means "to have fun" (楽しむ) in Japanese.' >Tanoshimu</h4>
            <p>
                Welcome! Please enter your username and password below.
            </p>

            <div class="container">
                <div class="container">
                    <div id="login-messages" class="center">
                        <div class="login-register-error">
                            <span id="error-message"></span>
                        </div>
                        <div class="login-register-waiting">
                            <span id="waiting-message"></span>
                        </div>
                        <div class="login-register-success">
                            <span id="success-message"></span>
                        </div>
                    </div>
                    <div class="row">
                        <form id="login-form" onsubmit="return login('<%= error_cont_id %>', '<%= wait_cont_id %>', '<%= succ_cont_id %>', this.getAttribute('id'), '<%= @params.to_json %>')">
                            <div class="row">
                                <div class="input-field col s12 m6">
                                  <input id="username" type="text" class="validate">
                                  <label for="username">Username</label>
                                </div>
                                <div class="input-field col s12 m6">
                                  <input id="password" type="password" class="validate">
                                  <label for="password">Password</label>
                                </div>
                            </div>
                            <div class="row">
                                
                            </div>
                            <button class="btn" value="login" id="">login</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="google-play">
                <a href='https://play.google.com/store/apps/details?id=ca.akinyele.ntanoshimu&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1'><img alt='Get it on Google Play' src='https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png'/></a>

                <a href='https://play.google.com/store/apps/details?id=ca.akinyele.ntanoshimu&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1'><img alt='Disponible sur Google Play' src='https://play.google.com/intl/en_us/badges/images/generic/fr_badge_web_generic.png'/></a>

                <a href='https://play.google.com/store/apps/details?id=ca.akinyele.ntanoshimu&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1'><img alt='Google Play で手に入れよう' src='https://play.google.com/intl/en_us/badges/images/generic/ja_badge_web_generic.png'/></a>

            </div>

            <div class="hidden login-register-error">
                <p id="error-message">
                    We are currently experiencing issues with our servers. Please come back soon!
                </p>
            </div>

        </div>
    </div>
</div>