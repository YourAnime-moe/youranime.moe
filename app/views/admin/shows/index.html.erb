<h1 class="title">Show List</h1>
<div class="section">
  <%= form_with(url: process_csv_admin_shows_path, multipart: true) do %>
    <%= file_field_tag 'shows_data' %>

    <%= submit_tag 'Submit CSV file', class: 'button is-small is-light' %>
  <% end %>
</div>

<div class="columns is-multiline">
  <% @shows.each do |show| %>
    <div class="column is-2">
      <%= link_to(admin_show_path(show)) do %>
        <%= show_thumb(show) %>
      <% end %>
    </div>
  <% end %>
</div>
