<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <% @crumbs.each do |crumb| %>
      <% if active_crumb?(crumb) %>
        <li class="is-active"><a href="#" aria-current="page"><%= crumb[:name] %></a></li>
      <% else %>
      <li><%= link_to(crumb[:name], crumb[:link]) %></li>
      <% end %>
    <% end %>
  </ul>
</nav>
